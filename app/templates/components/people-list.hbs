<h2>{{title}}</h2>

{{#each people as |person|}}
  <article class="listing">
    <div class="details">
      <h3>{{person.title}}</h3>
      <div class="detail owner">
        <span>Owner:</span> {{person.owner}}
      </div>
      <div class="detail type">
        <span>Type:</span> {{person.category}}
      </div>
      <div class="detail location">
        <span>Location:</span> {{person.city}}
      </div>
      <div class="detail bedrooms">
        <span>Number of bedrooms:</span> {{person.bedrooms}}
      </div>
    </div>
  </article>
{{/each}}