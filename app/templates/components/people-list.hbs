<div class="layout-row flex-gt-xs-25">
 {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}{{person.login}}{{/text.headline}}
        {{/title.text}}
     {{ title.media size="sm" src=person.avatar_url alt=person.login title=person.login }}

      {{/card.title}}

      {{#card.actions class="layout-row layout-align-start-center" as |actions|}}
        {{#actions.icons}}
          {{#paper-button iconButton=true}}{{paper-icon 'favorite'}}{{/paper-button}}
          {{#paper-button iconButton=true}}{{paper-icon 'share'}}{{/paper-button}}
        {{/actions.icons}}
        {{#paper-button}}Contact{{/paper-button}}
        {{#paper-button}}Hide{{/paper-button}}
      {{/card.actions}}
      {{#card.content}}
      <div style="max-width: 280px">
        {{#if person.skills}}
        {{paper-chips
          content=person.skills
          readOnly=true}}
        {{else}}
        <em>No skills to show</em>
        {{/if}}
      </div>
      {{/card.content}}
   {{/paper-card}}
    </div>
